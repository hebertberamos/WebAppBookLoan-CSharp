@model IEnumerable<WebApplicationBookLoan.Models.Loan>

@{
    ViewData["Title"] = "Loan list";
}
<div style="display: flex; justify-content:space-between">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-sucess" style="background-color:#3CB371; color:#F0F8FF">Create New</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LenderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LenderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
