@model WebApplicationBookLoan.Models.Loan

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LenderName" class="control-label">Lender</label>
                <input asp-for="LenderName" class="form-control" />
                <span asp-validation-for="LenderName" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 10px">
                <label asp-for="BorrowedName" class="control-label">Borrowed</label>
                <input asp-for="BorrowedName" class="form-control" />
                <span asp-validation-for="BorrowedName" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 10px">
                <label asp-for="BookName" class="control-label">Book's name</label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 10px">
                <label asp-for="LoanDate" class="control-label">Loan date</label>
                <input asp-for="LoanDate" class="form-control" />
                <span asp-validation-for="LoanDate" class="text-danger"></span>
            </div>
            <div style="display: flex; justify-content: space-around; padding-top: 20px">
                <div class="form-group" style="background-color: #3CB371; border-radius: 5px">
                    <input style=" color: #F0F8FF"  type="submit" value="Save" class="btn" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
